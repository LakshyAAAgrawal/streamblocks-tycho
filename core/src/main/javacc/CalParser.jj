|	< RSQUARE: "]" >
}

/* Operators */
TOKEN: {
	< EQ: "=" >
|	< COLON_EQ: ":=" >
|	< SINGLE_ARROW_RIGHT: "->" >
|	< VERTICAL_BAR: "|" >
|	< GREATER_THAN: ">" >
|	< STAR: "*" >
|	< DOT_STAR: ".*" >
|	< CINNAMON_BUN: "@" >
|	< OP: <OP_CHAR> (<OP_CHAR> | "=")* >
|	< #OP_CHAR: ["!", "#", "$", "%", "^", "&", "*", "/",
		"+", "-", "<", ">", "?", "~", "|", "."] >
}

/* String literals */
TOKEN: {
	< STRING : "\"" ((~["\""])* ("\\" "\"")*)* "\"" >
}


/* Numeric literals */
TOKEN: {
	< INTEGER: <DECIMAL_LITERAL> | <HEXADECIMAL_LITERAL> | <OCTAL_LITERAL> >
|
	<REAL:
			(<DECIMAL_DIGIT>)+ "." (<DECIMAL_DIGIT>)+ (<EXPONENT>)?
		|	(<DECIMAL_DIGIT>)+ "." <EXPONENT> >
//|
//	< REAL:
//			(<DECIMAL_DIGIT>)+ "." (<DECIMAL_DIGIT>)* (<EXPONENT>)?
//		|	"." (<DECIMAL_DIGIT>)+ (<EXPONENT>)?
//		|	(<DECIMAL_DIGIT>)+ <EXPONENT> >
|
	< #DECIMAL_LITERAL: <NON_ZERO_DECIMAL_DIGIT> (<DECIMAL_DIGIT>)* >
|
	< #HEXADECIMAL_LITERAL: "0" ["x", "X"] (<HEXADECIMAL_DIGIT>)+ >
|
	< #OCTAL_LITERAL: "0" (<OCTAL_DIGIT>)* >
|
	< #EXPONENT: ["e", "E"] (["+", "-"])? (<DECIMAL_DIGIT>)+ >
|
	< #NON_ZERO_DECIMAL_DIGIT: ["1"-"9"] >
|
	< #DECIMAL_DIGIT: ["0"-"9"] >
|
	< #OCTAL_DIGIT: ["0"-"7"] >
|
	< #HEXADECIMAL_DIGIT: ["0"-"9", "a"-"f", "A"-"F"] >
}


/* Identifies */
TOKEN: {
	< ID: (["a"-"z", "A"-"Z", "_", "$", "0"-"9"])+ >
}


QID NamespaceScan() :
{
	QID qid = QID.empty();
	Token unitId;
}
{
	(
		"namespace"
		qid = QID()
		":"
	)?
	{
		return qid;
	}
}


NamespaceDecl CompilationUnit() :
{
	NamespaceDecl ns;
}
{
	ns = NamespaceDeclContents(QID.empty())
	<EOF>
	{
		return ns;
	}
|
	ns = NamespaceDecl()
	<EOF>
	{
		return ns;
	}
}

NamespaceDecl OrccUnit() :
{
	Token id;
	ImmutableList.Builder<VarDecl> decls = ImmutableList.builder();
	VarDecl decl;
}
{
	"unit"
	id = <ID>
	":"
	(
		(Annotation())*
		decl = GlobalVarDecl()
		{ decls.add(decl); }
	)*
	"end"
	{
		return new NamespaceDecl(
				QID.of(id.image),
				ImmutableList.empty(),
				decls.build(),
				ImmutableList.empty(),
				ImmutableList.empty());
	}
}

Annotation Annotation() :
{
	Token id;
	Token par;
}
{
	"@" id = <ID>
	(
		"("
		(
			AnnotationParameter()
			("," AnnotationParameter())*
		)?
		")"
	)?
	{ return new Annotation(id.image, ImmutableList.empty()); }
}

void AnnotationParameter() :
{
}
{
	LOOKAHEAD(2)
	<ID> "=" Expression()
|
	Expression()
}

NamespaceDecl NamespaceDecl() :
{
	QID qid;
	NamespaceDecl ns;
}
{
	"namespace"
	qid = QID()
	":"
	ns = NamespaceDeclContents(qid)
	"end"
	{ return ns; }
}

NamespaceDecl NamespaceDeclContents(QID name) :
{
	ImmutableList.Builder<Import> imports = ImmutableList.builder();
	ImmutableList.Builder<VarDecl> varDecls = ImmutableList.builder();
	ImmutableList.Builder<EntityDecl> entityDecls = ImmutableList.builder();
	ImmutableList.Builder<TypeDecl> typeDecls = ImmutableList.builder();

	Import i;
	VarDecl v;
	EntityDecl e;
	TypeDecl t;
}
{
	(Annotation())*
	(
		i = Import() ";" { imports.add(i); }
	|
		LOOKAHEAD(2)
		v = GlobalVarDecl() { varDecls.add(v); }
	|
		e = ActorDecl() { entityDecls.add(e); }
	|
		e = NetworkDecl() { entityDecls.add(e); }
	)*
	{
		return new NamespaceDecl(name, imports.build(), varDecls.build(), entityDecls.build(), typeDecls.build());
	}
}

QID QID() :
{
	QID qid;
	Token id;
}
{
	id = <ID> { qid = QID.of(id.image); }
	(
		LOOKAHEAD(2)
		"."
		id = <ID> { qid = qid.concat(QID.of(id.image)); }
	)*
	{ return qid; }
}

/* Declarations */
Availability Availability() :
{
}
{
	"public" { return Availability.PUBLIC; }
|
	"private" { return Availability.PRIVATE; }
|
	"local" { return Availability.LOCAL; }
}

VarDecl GlobalVarDecl() :
{
	Availability availability = Availability.PUBLIC;
	String name;
	TypeExpr type = null;
	Expression expr;
}
{
	(availability = Availability())?
	(
		{ TypeAndName typeName; }
		typeName = VarDeclTypeName()
		"="
		expr = Expression()
		";"
		{ name = typeName.name; type = typeName.type; }
	|
		LOOKAHEAD(2)
		{ NameAndDef<ExprLambda> fun; }
		fun = FunDecl()
		{ name = fun.name; expr = fun.def; }
	|
		{ NameAndDef<ExprProc> proc; }
		proc = ProcDecl()
		{ name = proc.name; expr = proc.def; }
	)
	{
		return VarDecl.global(availability, type, name, expr);
	}
}


VarDecl LocalVarDecl(boolean endWithSemicolon) :
{
	TypeExpr type = null;
	String name;
	Expression expr = null;
	boolean assignable = false;
}
{
	(
		{ TypeAndName typeName; }
		typeName = VarDeclTypeName()
		(
			( "=" { assignable = false; } | ":=" { assignable = true; } )
			expr = Expression()
		)?
		(
			LOOKAHEAD({endWithSemicolon})
			";"
		)?
		{ name = typeName.name; type = typeName.type; }
	|
		LOOKAHEAD(2)
		{ NameAndDef<ExprLambda> fun; }
		fun = FunDecl()
		{ name = fun.name; expr = fun.def; }
	|
		{ NameAndDef<ExprProc> proc; }
		proc = ProcDecl()
		{ name = proc.name; expr = proc.def; }
	)
	{
		return VarDecl.local(type, name, !assignable, expr);
	}
}

Import Import() :
{
	Import imp;
}
{
	"import"
	(
		imp = GroupImportTail()
	|
		imp = SingleImportTail()
	)
	{
		return imp;
	}
}

GroupImport GroupImportTail() :
{
	QID globalName;
	Import.Kind kind = Import.Kind.VAR;
}
{
	"all"
	(kind = ImportKind())?
	globalName = QID()
	{
		return new GroupImport(kind, globalName);
	}
}

SingleImport SingleImportTail() :
{
	QID globalName;
	Import.Kind kind = Import.Kind.VAR;
	Token localNameToken = null;
}
{
	(kind = ImportKind())?
	globalName = QID()
	("=" localNameToken = <ID>)?
	{
		String localName;
		if (localNameToken == null) {
			localName = globalName.getLast().toString();
		} else {
			localName = localNameToken.image;
		}
		return new SingleImport(kind, globalName, localName);
	}
}

Import.Kind ImportKind() :
{}
{
	"var" { return Import.Kind.VAR; }
|
	"type" { return Import.Kind.TYPE; }
|
	"entity" { return Import.Kind.ENTITY; }
}

NameAndDef<ExprLambda> FunDecl() :
{
	boolean external = false;
	Token id;
	ImmutableList<VarDecl> valPars;
	ImmutableList<VarDecl> varDecls = ImmutableList.empty();
	Expression expr = null;
	TypeExpr type = null;
}
{
	("external" {external = true;})?
	"function"
	id = <ID>
	"("
	valPars = FormalValuePars()
	")"
	(
		"-->"
		type = Type()
	)?
	(
		"var"
		varDecls = VarDecls()
	)?
	(
		":"
		expr = Expression()
		"end"
	|
		";"
	|
		"end"
	)
	{
		if (!varDecls.isEmpty()) {
			expr = new ExprLet(ImmutableList.empty(), varDecls, expr);
		}
		ExprLambda lambda = new ExprLambda(ImmutableList.empty(), valPars, expr, type, external);
		return new NameAndDef<ExprLambda>(id.image, lambda);
	}
}

NameAndDef<ExprProc> ProcDecl() :
{
	Token id;
	ImmutableList<VarDecl> valPars;
	ImmutableList<VarDecl> varDecls = ImmutableList.empty();
	ImmutableList<Statement> stmts = ImmutableList.empty();
	boolean external = false;
}
{
	("external" {external=true;})?
	"procedure"
	id = <ID>
	"("
	valPars = FormalValuePars()
	")"
	(
		"var"
		varDecls = VarDecls()
	)?
	(
		";"
	|
		("begin" | "do")
		stmts = Statements()
		"end"
	|
		"end"
	)
	{
		ExprProc proc;
		if (external) {
			proc = new ExprProc(ImmutableList.empty(), valPars);
		} else if (varDecls.isEmpty()) {
			proc = new ExprProc(ImmutableList.empty(), valPars, stmts);
		} else {
			StmtBlock block = new StmtBlock(ImmutableList.empty(), varDecls, stmts);
			proc = new ExprProc(ImmutableList.empty(), valPars, ImmutableList.of(block));
		}
		return new NameAndDef<ExprProc>(id.image, proc);
	}
}

ImmutableList<VarDecl> VarDecls() :
{
	ImmutableList.Builder<VarDecl> builder = ImmutableList.builder();
	VarDecl decl;
}
{
	(
		decl = LocalVarDecl(false) { builder.add(decl); }
		( "," decl = LocalVarDecl(false) { builder.add(decl); })*
	)?
	{
		return builder.build();
	}
}

EntityDecl NetworkDecl() :
{
	Token id;
	ImmutableList<TypeDecl> typePars = ImmutableList.empty();
	ImmutableList<VarDecl> valuePars;
	ImmutableList<PortDecl> inputPorts;
	ImmutableList<PortDecl> outputPorts;
	ImmutableList.Builder<VarDecl> varDecls = ImmutableList.builder();
	ImmutableList.Builder<TypeDecl> typeDecls = ImmutableList.builder();
	ImmutableList<InstanceDecl> instances = ImmutableList.empty();
	ImmutableList<StructureStatement> structure = ImmutableList.empty();
	VarDecl varDecl;
}
{
	"network"
	id = <ID>
	"("
	valuePars = FormalValuePars()
	")"
	inputPorts = PortDecls()
	"==>"
	outputPorts = PortDecls()
	":"
	(
		"var"
		(
			varDecl = LocalVarDecl(true)
			{ varDecls.add(varDecl); }
		)*
	)?
	("entities" instances = EntityInstanceDecls())?
	("structure" structure = StructureStmts())?
	"end"


	{ return EntityDecl.global(Availability.PUBLIC, id.image, new NlNetwork(typePars, valuePars, typeDecls.build(), varDecls.build(), inputPorts, outputPorts,
                 			instances, structure)); }
}

ImmutableList<ToolAttribute> OptToolAttributes() :
{
	ImmutableList.Builder<ToolAttribute> builder = ImmutableList.builder();
	Token id;
	Expression expression;
	TypeExpr type;
}
{
	(
	"{"
	(
		id = <ID>
		(
			":"
			type = Type()
			{
				builder.add(new ToolTypeAttribute(id.image, type));
			}
		|
			"="
			expression = Expression()
			{
				builder.add(new ToolValueAttribute(id.image, expression));
			}
		)
		";"
	)*
	"}"
	)?
	{
		return builder.build();
	}
}

ImmutableList<InstanceDecl> EntityInstanceDecls() :
{
	Token instanceName;
	Token entityName;
	Token parameterName;
	Expression parameter;
	ImmutableList.Builder<InstanceDecl> entities = ImmutableList.builder();
	ImmutableList.Builder<ValueParameter> parameters;
	ImmutableList<ToolAttribute> toolAttrs;
}
{
	(
		{
			parameters = ImmutableList.builder();
		}
		instanceName = <ID>
		"="
		entityName = <ID>
		"("
		(

			parameterName = <ID>
			"="
			parameter = Expression()
			{
				parameters.add(new ValueParameter(parameterName.image, parameter));
			}
			(
				","
				parameterName = <ID>
				"="
				parameter = Expression()
				{
					parameters.add(new ValueParameter(parameterName.image, parameter));
				}
			)*
		)?
		")"
		toolAttrs = OptToolAttributes()
		";"
		{
			entities.add(new InstanceDecl(instanceName.image, new EntityInstanceExpr(new EntityReferenceLocal(entityName.image), parameters.build()).withAttributes(toolAttrs)));
		}
	)*
	{
		return entities.build();
	}
}

ImmutableList<StructureStatement> StructureStmts() :
{
	ImmutableList.Builder<StructureStatement> builder = ImmutableList.builder();
	Token src, srcPort, tgt, tgtPort;
	ImmutableList toolAttrs;
}
{
	(
		{ src = null; tgt = null; }
		(LOOKAHEAD(2) src = <ID> ".")?
		srcPort = <ID>
		"-->"
		(LOOKAHEAD(2) tgt = <ID> ".")?
		tgtPort = <ID>
		toolAttrs = OptToolAttributes()
		";"
		{
			builder.add(new StructureConnectionStmt(
					new PortReference(src == null ? null : src.image, ImmutableList.empty(), srcPort.image),
					new PortReference(tgt == null ? null : tgt.image, ImmutableList.empty(), tgtPort.image)
					).withAttributes(toolAttrs));
		}
	)*
	{
		return builder.build();
	}
}

/* ActorDecl */
EntityDecl ActorDecl() :
{
	Token id;
	String name;
	ImmutableList<TypeDecl> typePars = ImmutableList.empty();
	ImmutableList<VarDecl> valuePars;
	ImmutableList<TypeDecl> typeDecls = ImmutableList.empty();
	ImmutableList.Builder<VarDecl> varDecls = ImmutableList.builder();
	VarDecl varDecl;
	ImmutableList<PortDecl> inputPorts = ImmutableList.empty();
	ImmutableList<PortDecl> outputPorts = ImmutableList.empty();
	ImmutableList.Builder<Action> initializers = ImmutableList.builder();
	ImmutableList.Builder<Action> actions = ImmutableList.builder();
	Action action;
	ScheduleFSM scheduleFSM = null;
	ProcessDescription process = null;
	ImmutableList.Builder<ImmutableList<QID>> priorities = ImmutableList.builder();
	ImmutableList.Builder<Expression> invariants = ImmutableList.builder();
}
{
	("external")?
	"actor"
	id = <ID> { name = id.image; }
	"("
	valuePars = FormalValuePars()
	")"
	inputPorts = PortDecls()
	"==>"
	outputPorts = PortDecls()
	("time" Type())?
	(
		":"
		(
			(
				Annotation()
			)*
			(
				LOOKAHEAD((QID() ":")? "action")
				action = Action()
				{ actions.add(action); }
			|
				LOOKAHEAD((QID() ":")? "initialize")
				action = InitializationAction()
				{ initializers.add(action); }
			|
				varDecl = LocalVarDecl(true)
				{ varDecls.add(varDecl); }
			|
				PriorityOrder(priorities)
			|
				{
					if (scheduleFSM != null || process != null) {
						throw new ParseException("Only one action schedule or process description is allowed.");
					}
				}
				scheduleFSM = ActionSchedule()
			|
				{
					if (scheduleFSM != null || process != null) {
						throw new ParseException("Only one action schedule or process description is allowed.");
					}
				}
				process = ProcessDescription()
			)
		)*
		("end" | "endactor")
	|
		";"
	)
	{
		CalActor a = new CalActor(typePars, valuePars, typeDecls, varDecls.build(), inputPorts, outputPorts, initializers.build(), actions.build(), scheduleFSM, process, priorities.build(), invariants.build());
		return EntityDecl.global(Availability.PUBLIC, name, a);
	}
}

ProcessDescription ProcessDescription() :
{
	ImmutableList<Statement> statements;
	boolean repeated;
}
{
	(
		"repeat"
		{ repeated = true; }
	|
		"do"
		{ repeated = false; }
	)
	{
		processDescription = true;
	}
	statements = Statements()
	"end"
	{
		processDescription = false;
		return new ProcessDescription(statements, repeated);
	}
}

ImmutableList<PortDecl> PortDecls() :
{
	ImmutableList.Builder<PortDecl> decls = ImmutableList.builder();
	PortDecl decl;
}
{
	(
		decl = PortDecl() { decls.add(decl); }
		(
			","
			decl = PortDecl() { decls.add(decl); }
		)*
	)?
	{ return decls.build(); }
}

PortDecl PortDecl() :
{
